@{
    ViewBag.Title = "SendEmail";
    Layout = "~/Areas/Admin/Views/LayOut/Admin_LayOut.cshtml";
}

@section Header
{

    Gửi tin nhắn đến khách hàng

}
@using (Html.BeginForm("SendEmail", "KhachHangAD",FormMethod.Post))
{
    <section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        <input class="form-control" name="email" placeholder="To:" value="@ViewBag.Email">
                    </div>
                    <div class="form-group">
                        <input class="form-control" name="subject" placeholder="Subject:">
                    </div>
                    <div class="form-group">
                        <textarea id="content" name="content" class="form-control" style="width: 100%; height: 300px;" placeholder="Content:"></textarea>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <div class="pull-right">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-envelope-o"></i> Send</button>
                    </div>
                    <a href="/Admin/KhachHangAD/Index">
                        <button type="reset" class="btn btn-default"><i class="fa fa-times"></i> Back</button>
                    </a>
                </div>
                <!-- /.box-footer -->
            </div>
            <!-- /. box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
}