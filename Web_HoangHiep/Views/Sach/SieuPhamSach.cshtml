@model  List<Web_HoangHiep.Models.Sach>


@{
            foreach (var item in Model)
{
    <div class="chain-grid menu-chain">
        <a style="text-decoration: none;" href="@Url.Action("ChiTietSP","Sach",new {@id=item.MaSach })">
        <img class="img-responsive chain" src="@Url.Content(item.AnhBia)" alt="" width="280" height="auto"/></a>
        <div class="grid-chain-bottom chain-watch" style="text-align:center">
            <span class="actual dolor-left-grid"> @(item.GiaBan.HasValue ? item.GiaBan.Value.ToString("N0") : "Liên Hệ") VND</span>
            <h6><a href="single.html">@item.TenSach</a></h6>
        </div>
    </div>

}
}
