@model Web_HoangHiep.Models.KhachHang
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/LayOutClient/LayOutClient.cshtml";
}


<script src="~/Content/JS_Customer/ChiNhapSojs.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      <div class="alert alert-success" style="text-align:center;margin-top:20px">  <h4>Đăng Ký Khách Hàng</h4></div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Tài khoản", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Tên đầy đủ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenKhachHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Mật Khẩu", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
             <input class="form-control" name="MatKhau" type="password" id="MatKhau"/>
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                <input class="form-control" name="Email" type="email" id="Email" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Địa Chỉ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ngày Sinh", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Giới tính", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
         
                    <select class="form-control" name="GioiTinh">
                        <option value="true">Nam</option>
                        <option value="false">Nữ</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
              
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Số điện thoại", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-8">
                <input type="tel" name="DienThoai" class="form-control" onkeypress="return isNumberKey(event)">
                @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="Create" class="btn btn-sm btn-info" />
            </div>
        </div>

      
    </div>
}

